{
    "name": "drupal/legacy-project",
    "description": "Project template for Drupal 9 projects with composer following drupal/drupal layout",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/drupal",
    "support": {
        "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
        "chat": "https://www.drupal.org/node/314178"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/address": "^1.11",
        "drupal/admin_toolbar": "^3.2",
        "drupal/back_to_top": "^2.0",
        "drupal/better_exposed_filters": "^6.0",
        "drupal/block_class": "^2.0",
        "drupal/block_visibility_groups": "^1.4",
        "drupal/change_author_action": "^1.0",
        "drupal/chosen": "^3.0",
        "drupal/commerce": "^2.32",
        "drupal/commerce_paypal": "^1.1",
        "drupal/core-composer-scaffold": "^9.4",
        "drupal/core-project-message": "^9.4",
        "drupal/core-recommended": "^9.4",
        "drupal/core-vendor-hardening": "^9.4",
        "drupal/ctools": "3.11",
        "drupal/devel": "^4.1",
        "drupal/dropdown_language": "^3.0",
        "drupal/easy_breadcrumb": "^2.0",
        "drupal/features": "^3.12",
        "drupal/file_delete": "^2.0",
        "drupal/google_analytics": "^4.0",
        "drupal/google_map_field": "^1.14",
        "drupal/imce": "^2.4",
        "drupal/inline_entity_form": "^1.0@RC",
        "drupal/jquery_ui": "^1.4",
        "drupal/jquery_ui_datepicker": "^1.4",
        "drupal/jquery_ui_effects": "^1.2",
        "drupal/jquery_ui_slider": "^1.1",
        "drupal/jquery_ui_touch_punch": "^1.1",
        "drupal/ludwig": "^2.0",
        "drupal/mailchimp": "^2.0",
        "drupal/metatag": "^1.21",
        "drupal/module_filter": "^3.2",
        "drupal/pathauto": "^1.11",
        "drupal/profile": "^1.7",
        "drupal/search404": "^2.0",
        "drupal/simplenews": "^3.0@beta",
        "drupal/token": "^1.11",
        "drupal/tvi": "^1.0@RC",
        "drupal/twig_tweak": "^3.1",
        "drupal/twitter_block": "^3.0@alpha",
        "drupal/twitter_embed": "^1.0@alpha",
        "drupal/views_infinite_scroll": "^2.0",
        "drupal/xmlsitemap": "^1.4",
        "drush/drush": "^11.3"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "drupal/core-vendor-hardening": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "cweagans/composer-patches": true
        },
        "sort-packages": true
    },
    "extra": {
        "enable-patching": true,
        "patches": {
            "drupal/twitter_feed": {
                "Twitter library call fix": "https://www.drupal.org/files/issues/2022-09-20/twitter_feed-3096291-7.patch",
                "Twitter image": "https://www.drupal.org/files/issues/2019-04-03/2908152-tweet-images.patch"
            }
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "web"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "drupal-core-project-message": {
            "include-keys": [
                "homepage",
                "support"
            ],
            "post-create-project-cmd-message": [
                "<bg=blue;fg=white>                                                         </>",
                "<bg=blue;fg=white>  Congratulations, youâ€™ve installed the Drupal codebase  </>",
                "<bg=blue;fg=white>  from the drupal/legacy-project template!               </>",
                "<bg=blue;fg=white>                                                         </>",
                "",
                "<bg=yellow;fg=black>Next steps</>:",
                "  * Install the site: https://www.drupal.org/docs/8/install",
                "  * Read the user guide: https://www.drupal.org/docs/user_guide/en/index.html",
                "  * Get support: https://www.drupal.org/support",
                "  * Get involved with the Drupal community:",
                "      https://www.drupal.org/getting-involved",
                "  * Remove the plugin that prints this message:",
                "      composer remove drupal/core-project-message"
            ]
        }
    },
    "require-dev": {
        "symfony/var-dumper": "^5.4"
    }
}
